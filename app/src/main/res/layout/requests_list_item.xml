<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/requests_list_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/download" />

    <LinearLayout
        android:id="@+id/linear_layout_requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <TextView
            android:id="@+id/requests_list_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_marginLeft="15dp"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/requests_list_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/notif_name"
            android:layout_marginLeft="15dp"
            android:text="NotificationMessage"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#d3d3d3"
            android:layout_gravity="bottom"
            android:layout_below="@id/linear_layout_requests"/>
    </LinearLayout>



</LinearLayout>